@model LinqLabb2.Models.Domain.Class

@{
    ViewData["Title"] = "Create";
}

<h1>Lägg till ny klass</h1>

<h4>Klass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassName" class="control-label"></label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FK_TeacherId" class="control-label"></label>
                <select asp-for="FK_TeacherId" class="form-control" asp-items="ViewBag.FK_TeacherId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FK_CourseId" class="control-label"></label>
                <select asp-for="FK_CourseId" class ="form-control" asp-items="ViewBag.FK_CourseId"></select>
            </div><br/>
            <div class="form-group">
                <input type="submit" value="Lägg till" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
