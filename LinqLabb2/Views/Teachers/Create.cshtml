@model LinqLabb2.Models.Domain.Teacher

@{
    ViewData["Title"] = "Create";
}

<h1>Lägg till lärare</h1>

<h4>Lärare</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TFirstName" class="control-label"></label>
                <input asp-for="TFirstName" class="form-control" />
                <span asp-validation-for="TFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TLastName" class="control-label"></label>
                <input asp-for="TLastName" class="form-control" />
                <span asp-validation-for="TLastName" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Lägg till" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
